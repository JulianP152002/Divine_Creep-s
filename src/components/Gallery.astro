---
import ButtonTop from "../hooks/Button_top.astro"
import gallery1 from '../assets/gallery1.jpg'
import gallery2 from '../assets/gallery2.jpg'
import gallery3 from '../assets/gallery3.jpg'
import gallery4 from '../assets/gallery4.jpg'
import Image from 'astro/components/Image.astro'
---

<section id="gallery" >
    <h2 class=" text-4xl py-8 text-center m-auto text-green-600 " >Nuestra Galeria</h2>
    <div class="grid mm:grid-cols-1 grid-cols-2 gap-2 px-10">
    
        <div>
            <Image  class="hover:scale-110 transition-all h-auto max-w-full rounded-lg" src={gallery1} alt="galeria 1">
        </div>
        <div>
            <Image class="hover:scale-110 transition-all h-auto max-w-full rounded-lg" src={gallery2} alt="galeria 2">
        </div>
        <div>
            <Image class="hover:scale-110 transition-all   h-auto max-w-full rounded-lg" src={gallery3} alt="galeria 3">
        </div>
        <div>
            <Image class="hover:scale-110 transition-all h-auto max-w-full rounded-lg" src={gallery4} alt="galera 4">
        </div>
    </div>
    
</section>

